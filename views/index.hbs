<h1>Body mass index calculator</h1>

<form action = "/calculate" method="POST">

    
      <label for="height-input">Height (meters)</label><br>
      <input 
        type="number" 
        id="height-input" 
        name="height" 
        step="0.01" 
        required
      ><br><br>

      <label for="weight-input">Weight (kilograms)</label><br>
      <input 
        type="number" 
        id="weight-input" 
        name="weight" 
        step="0.1" >
        

<button type="submit">Calculate</button>


</form>